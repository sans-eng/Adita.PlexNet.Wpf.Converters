<Window x:Class="Adita.PlexNet.Wpf.Converters.Samples.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Adita.PlexNet.Wpf.Converters.Samples"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        xmlns:conv="clr-namespace:Adita.PlexNet.Wpf.Converters;assembly=Adita.PlexNet.Wpf.Converters">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <StackPanel>
        <TextBlock Text="{Binding Value, Converter={conv:ArithmeticConverter Operation=Addition}, ConverterParameter=40}"/>
    </StackPanel>
</Window>
